doctype html
html
	head
		title Bellcell
		meta(name="robots", content="noindex, nofollow")
		link(rel="stylesheet", href="/fonts/opensans_local.css", async)
		link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
		style.
			.btn.active{background:gray !important;} 
			body{padding:40px} 
			.wizard-content .control-label{font-size:15px;}
			.step-content{padding:15px;}			
			.loading{cursor:progress;}			
			textarea{width:500px !important; height:150px !important;} 
			//.login-box{background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#87e0fd), color-stop(40%,#53cbf1), color-stop(100%,#05abe0));background-repeat: no-repeat;background-color: #f0f0f0;background-position-y: -260px;background: -moz-linear-gradient(top, #87e0fd 0%, #53cbf1 40%, #05abe0 100%);background: -webkit-linear-gradient(top, #87e0fd 0%,#53cbf1 40%,#05abe0 100%);background: -o-linear-gradient(top, #87e0fd 0%,#53cbf1 40%,#05abe0 100%);background: -ms-linear-gradient(top, #87e0fd 0%,#53cbf1 40%,#05abe0 100%);background: linear-gradient(to bottom, #87e0fd 0%,#53cbf1 40%,#05abe0 100%);background-repeat: no-repeat;background-color: #f0f0f0; background-position: 0 -260px !important;	} 
			.signup-box{background: white;} 
			.login-box h1{font-size:44px !important;  !important; font-family: "Open Sans";font-weight: 100;} p{color: white;font-family: "open sans";}
			.signup-box h1{color: #555;} 

	body
		section.container
			section.row
				section(style='text-align:center;')
					img(src='/images/logo_new.png')
				section.col-md-6
					section.jumbotron.login-box
						h1 Welcome to Bellcell
						-if (typeof msg != 'undefined')
							p.alert.alert-error
								small
									strong(style='color:#666')=msg
						form(method='post', action='/login', style='margin-top:60px')
							div.input
								input(name='username',type='text',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;margin-bottom: 14px;',placeholder='Phone number').form-control
							div.input
								input(name='password',type='password',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;',placeholder='Password').form-control
							div.actions.clearfix
								br
								input(value='Log in',type='submit',style='padding: 0.8em 3em;font-weight:bold;font-size:16px').btn.btn-info.btn-block
							div.actions.clearfix
								br
								div(style='text-align:center') OR
						form(method='post', action='/login-anonymous', style='margin-top:60px')
							div.actions.clearfix
								input(value='Log in anonymous',type='submit',style='padding: 0.8em 3em;font-weight:bold;font-size:16px').btn.btn-danger.btn-block

				section.col-md-6
					section.jumbotron.signup-box
						h2 Sign up
						p Please login to continue
						-if (typeof msg != 'undefined')
							p.alert.alert-error
								small
									strong(style='color:#666')=msg
						form(method='post', action='/login', style='margin-top:60px')
							div.input
								input(name='username',type='text',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;margin-bottom: 14px;',placeholder='Phone number').form-control
							div.input
								input(name='password',type='password',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;',placeholder='Password').form-control
							div.actions.clearfix
								br
							div.input
								input(name='password',type='password',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;',placeholder='Re enter password').form-control
							div.actions.clearfix
								br
								input(value='Register',type='submit',style='padding: 0.8em 3em;font-weight:bold;font-size:16px').btn.btn-info.btn-block
			section.footer
				p(style='text-align:center;color:#777') &copy; Bellcell